@model StudentApplication.Models.StudentDetail

@{
    ViewData["Title"] = "AddEdit";
}

<h1>AddEdit</h1>
<div>
    @if (Model != null)
    {
        @TempData["msg"];
    }
</div>

<h4>StudentDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label" hidden></label>
                <input asp-for="StudentId" class="form-control" hidden />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>



                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatherName" class="control-label"></label>
                <input asp-for="FatherName" class="form-control" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatherMobileNo" class="control-label"></label>
                <input asp-for="FatherMobileNo" class="form-control" />
                <span asp-validation-for="FatherMobileNo" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>*@
            <div class="form-group">
                <label asp-for="StandardId" class="control-label"></label>
                <select class="form-select" asp-for="StandardId">
                    <option>--select Standard--</option>
                    @if (ViewBag.Standard != null)
                    {

                        @foreach (var std in ViewBag.Standard)
                        {
                            <option value="@std.StandardId">@std.Name</option>
                        }

                    }
                </select>

                @*<option value="StandardId" selected>--Select StandardId-- </option>*@

                @*<input asp-for="StandardId" class="form-control" />*@
                <span asp-validation-for="StandardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DivisionId" class="control-label"></label>

                <select class="form-select" asp-for="DivisionId">
                    <option>--select Division--</option>
                    @if (ViewBag.Division != null)
                    {
                        @foreach (var std in ViewBag.Division)
                        {
                            <option value="@std.DivisionId">@std.Name</option>
                        }

                    }
                </select>
                @*<select class="form-select" asp-for="DivisionId">
                        <option value="Select DivisionId" selected>--Select DivisionId-- </option>
                    </select>*@
                @*<input asp-for="DivisionId" class="form-control" />*@
                <span asp-validation-for="DivisionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RollNo" class="control-label"></label>
                <input asp-for="RollNo" class="form-control" />
                <span asp-validation-for="RollNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GRNo" class="control-label"></label>
                <input asp-for="GRNo" class="form-control" />
                <span asp-validation-for="GRNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>


            <table>
                <thead>
                    <tr>
                        <th>Subjects
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{

                        List<StudentSubject> liststudentsub = new List<StudentSubject>();
                        if (ViewBag.StudentSubject != null)
                        {
                            liststudentsub = (List<StudentSubject>)ViewBag.StudentSubject;
                        }

                    }
                    @if (ViewBag.Subject != null)
                    {
                        foreach (var item in ViewBag.Subject)
                        {
                            <tr>
                                <td>
                                    @if (liststudentsub.Where(i => i.SubjectId == item.SubjectId).ToList().Count > 0)
                                    {
                                        <input value="@item.SubjectId" name="SubjectSelection" type="checkbox" checked>
                                        <label for="@item.SubjectName"> @item.SubjectName </label>
                                    }
                                  
                                    else
                                    {
                                        <input value="@item.SubjectId" name="SubjectSelection" type="checkbox">
                                        <label for="@item.SubjectName"> @item.SubjectName </label>
                                    }
                                    @*<input value="@item.SubjectId" name="SubjectSelection" type="checkbox" @(liststudentsub.Where(i => i.SubjectId == item.SubjectId).ToList().Count > 0 ? "checked" : "")>
        <label for="@item.SubjectName"> @item.SubjectName </label>*@
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>











            <div class="form-group">
                <input type="submit" value="@(Model.StandardId>0?"Save":"Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
